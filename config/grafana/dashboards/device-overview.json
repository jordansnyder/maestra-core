{
  "dashboard": {
    "title": "Maestra - Device Overview",
    "tags": ["maestra", "devices", "iot"],
    "timezone": "browser",
    "editable": true,
    "panels": [
      {
        "id": 1,
        "title": "Total Devices",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "format": "table",
            "rawSql": "SELECT COUNT(*) as count FROM devices",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Online Devices",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "format": "table",
            "rawSql": "SELECT COUNT(*) as count FROM devices WHERE status = 'online'",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Devices by Type",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "format": "table",
            "rawSql": "SELECT device_type as type, COUNT(*) as count FROM devices GROUP BY device_type",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Device Status",
        "type": "bargauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "format": "table",
            "rawSql": "SELECT status, COUNT(*) as count FROM devices GROUP BY status",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Recent Device Events",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "format": "table",
            "rawSql": "SELECT de.time, d.name, de.event_type, de.severity, de.message FROM device_events de JOIN devices d ON de.device_id = d.id ORDER BY de.time DESC LIMIT 50",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Device Metrics Over Time",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "format": "time_series",
            "rawSql": "SELECT bucket as time, device_id, metric_name, avg_value FROM device_metrics_hourly WHERE $__timeFilter(bucket) ORDER BY bucket",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
