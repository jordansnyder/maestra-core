# Maestra Infrastructure Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=maestra_dev_password
DATABASE_URL=postgresql://maestra:maestra_dev_password@postgres:5432/maestra

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
GRAFANA_PASSWORD=admin
JWT_SECRET=your-secret-key-change-in-production

# =============================================================================
# MESSAGE BUS CONFIGURATION
# =============================================================================
NATS_URL=nats://nats:4222
MQTT_BROKER=mosquitto:1883
REDIS_URL=redis://redis:6379

# =============================================================================
# SERVICE ENDPOINTS
# =============================================================================
FLEET_MANAGER_URL=http://fleet-manager:8080
NODERED_URL=http://nodered:1880
DASHBOARD_URL=http://dashboard:3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# OPTIONAL: CLOUD SYNC (for production)
# =============================================================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
